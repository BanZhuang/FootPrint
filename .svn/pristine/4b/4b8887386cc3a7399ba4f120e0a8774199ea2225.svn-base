<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <ImageView 
           android:id="@+id/trip_image"
           android:layout_width="130dp"
           android:layout_height="90dp"
           android:layout_marginTop="8dp"
           android:layout_marginBottom="8dp"
           android:src="@drawable/aa"/>

		<TextView
		    android:id="@+id/trip_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/trip_image"
		    android:layout_toRightOf="@+id/trip_image"
		    android:layout_marginTop="3dp"
		    android:layout_marginLeft="8dp"
		    android:layout_marginRight="20dp"
		    android:ellipsize="end"
		    android:singleLine="true"
		    android:text="宁波工程学院逸夫楼"
		    android:textSize="18sp" />

		<TextView
		    android:id="@+id/trip_abstract"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/trip_title"
		    android:layout_below="@+id/trip_title"
		    android:layout_marginTop="5dp"
		    android:layout_marginRight="20dp"
			android:ellipsize="end"
		    android:lines="2"
		    android:textColor="@color/textgray"
		    android:textSize="12sp"
		    android:text="宁波以“书藏古今，港通天下”为口号。宁波历史悠久，是具有7000多年文明史的“河姆渡文化”发祥地。唐代，宁波成为“海上丝绸之路”的起点之一，与扬州、广州并称为中国三大对外贸易港口。" 
		    />
		
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:layout_marginRight="10dp"
           android:gravity="center_vertical"
           android:layout_alignLeft="@+id/trip_abstract"
		   android:layout_below="@+id/trip_abstract"
           >
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="by"
               android:textColor="@color/textgray"
               android:layout_marginRight="7dp"
               android:textSize="12sp"/>
          <com.Tool.CircleImageView
               android:id="@+id/trip_userimage"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/head"
               app:border_color="#c8c8c8"
                />
           <TextView 
               android:id="@+id/trip_username"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="3dp"
               android:text="老李dssdfsdfsd"
               android:textSize="12sp"
               android:maxEms="3"
               android:singleLine="true"
               android:textColor="@color/orange"/>

           <RelativeLayout 
               android:id="@+id/rel"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               >

                   <TextView
                       android:id="@+id/trip_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentRight="true"
                       android:layout_alignParentTop="true"
                       android:text="2016/6/15"
                       android:textSize="12sp" />

           </RelativeLayout>
       </LinearLayout>    
    </RelativeLayout>
</LinearLayout>
